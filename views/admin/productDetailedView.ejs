<!doctype html>
<html lang="en">

<head>
    <title>product view</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>


<body>
    <header>
        <!-- place navbar here -->
        <%- include('../layouts/adminHeader.ejs') %>
    </header>

    <main>
        <div class=" container-fluid mt-4 border-primary">
            <div class="row d-flex justify-content-center">
                <div class="col-md-10 col-lg-11 col-xl-11">
                    <!-- Product Details Table -->
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th class="table-info">Name</th>
                                <td>
                                    <%= ProductData.name %>
                                </td>
                                <th class="table-info">Description</th>
                                <td>
                                    <%= ProductData.description %>
                                </td>
                            </tr>
                        </tbody>
                    </table><br>

                    <!-- Additional Details Table -->
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th class="table-info">Price</th>
                                <td>
                                    <%= ProductData.price %>
                                </td>
                                <th class="table-info">Category</th>
                                <td>
                                    <%= ProductData.category %>
                                </td>
                                <th class="table-info">Sub Category</th>
                                <td>
                                    <%= ProductData.sub_Category %>
                                </td>
                            </tr>
                            <tr>
                                <th class="table-info">Brand</th>
                                <td>
                                    <%= ProductData.brand %>
                                </td>
                                <!-- <th class="table-info">Discount</th>
                                <td>
                                    <%= ProductData.discount %>
                                </td> -->
                                <th class="table-info">Status</th>
                                <td>
                                    <%= ProductData.status %>
                                </td>
                                <th class="table-info">Stock</th>
                                <td>
                                    <%= ProductData.stock %>
                                </td>
                            </tr>

                            <!-- Variants Table -->
                            <% for (let i=0; i < ProductData.variants.length; i++) { %>
                                <tr>
                                    <th class="table-info">Color</th>
                                    <td>
                                        <p>
                                            <%= ProductData.variants[i].color %>
                                        </p>
                                    </td>
                                    <th class="table-info">Images</th>
                                    <!-- <td>
                                        <% for (let j=0; j < ProductData.variants[i].images.length; j++) { %>
                                            <img class="variant-image "
                                                src="/images/productImages/<%= ProductData.variants[i].images[j] %>"
                                                alt="Product Image <%= j + 1 %>">
                                            <% } %>
                                    </td> -->
                                    <td>
                                        <div class="row">
                                            <% if (ProductData.variants.length> 0 &&
                                                ProductData.variants[0].images.length
                                                >
                                                0)
                                                { %>
                                                <% if (ProductData.variants[0].images[0].startsWith('data:image/')) { %>
                                    <td><img width="50px" height="50px" src="<%= ProductData.variants[0].images[0] %>"
                                            alt=""></td>
                                    <% } else { %>
                                        <td><img width="50px" height="50px"
                                                src="/images/productImages/<%= ProductData.variants[0].images[0] %>"
                                                alt="">
                                        </td>
                                        <% } %>
                                            <% } else { %>
                                                <td>No image</td>
                                                <% } %>
                </div>
                </td>

                </tr>
                <% } %>
                    </tbody>
                    </table>
            </div>
        </div>
        </div>
    </main>



    <footer>
        <!-- place footer here -->
        <%- include('../layouts/adminFooter.ejs') %>
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>