    <script>
        function saveChanges() {
            // Get the form element
            var form = document.getElementById('editProfileForm');

            // Submit the form
            form.submit();
        }
    </script>

    <script>
        function closeFlashMessage() {
            const flashMessage = document.querySelector('.alert.alert-danger, .alert.alert-success');
            if (flashMessage) {
                flashMessage.remove();
            }
        }
    </script>


